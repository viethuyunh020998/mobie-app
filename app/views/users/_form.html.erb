<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-9 mx-auto">
      <div class="card card-signin flex-row my-5">
        <div class="card-img-left d-none d-md-flex">
            <!-- Background image for card set in CSS! -->
        </div>
        <div class="card-body">
          <%= raw t "user_new.h5" %>
          <%= form_for(@user) do |f| %>
            <div class="form-signin">
              <div class="form-label-group">
                <%= f.text_field :username, class: "form-control", placeholder: t("user_new.username") %>
                <%= f.label :username, t("user_new.username") %>
              </div>
              <div class="form-label-group">
                <%= f.text_field :email, class: "form-control", placeholder: t("user_new.email") %>
                <%= f.label :email, t("user_new.email") %>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password, class: "form-control", placeholder: t("user_new.password") %>
                <%= f.label :password, t("user_new.password") %>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("user_new.password_confirmation") %>
                <%= f.label :password_confirmation, t("user_new.password_confirmation") %>
              </div>
                <%= f.submit yield(:button_text),class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              <%= link_to t("user_new.signin"), login_path, class: "d-block text-center mt-2 small"%>
              <hr class="my-4">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
